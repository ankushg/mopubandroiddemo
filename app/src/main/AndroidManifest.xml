<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ankushg.androidmopubdemo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ankushg.androidmopubdemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ankushg.androidmopubdemo.InterstitialActivity"
            android:label="@string/title_activity_interstitial"
            android:parentActivityName="com.ankushg.androidmopubdemo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.ankushg.androidmopubdemo.BannerActivity"
            android:label="@string/title_activity_banner"
            android:parentActivityName="com.ankushg.androidmopubdemo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.ankushg.androidmopubdemo.NativeActivity"
            android:label="@string/title_activity_native"
            android:parentActivityName="com.ankushg.androidmopubdemo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
